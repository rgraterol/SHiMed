<%= form_for @usuario, html: {class: "horizontal-form", role:"form"} do |f|  %>
    <% if @usuario.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

          <ul>
            <% @usuario.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% if !signed_in? %>
        <h1>Usted no esta logueado</h1>
    <% else %>
        <h1>Editar Nombre de Usuario</h1>
        <div class="form-group">
          <%= f.label :nombre, :class=>"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :nombre, :class=>"form-control" %><br>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit 'Guardar Cambios',:class=>"btn btn-default", data: { confirm: 'Seguro que desea guardar los cambios?' } %>
          </div>
        </div>
    <% end %>
<% end %>