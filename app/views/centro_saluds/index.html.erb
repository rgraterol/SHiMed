<h1>Directorio de Centros de Salud</h1>

<table class="table table-striped table-bordered table-condensed">
  <tbody>
  <tr>
    <td><b>Nombre de Centro</b></td>
    <td><b>Ciudad</b></td>
    <td><b>Telefono</b></td>
    <td><b>Dirección</b></td>
    <td><b>Página Web</b></td>
  </tr>
  <% @centro_saluds.each do |centro_salud| %>
      <tr>
        <td><%= link_to centro_salud.nombre, centro_salud, :class => 'h4' %></td>
        <td><%= centro_salud.ciudad %></td>
        <td><%= centro_salud.telefono %></td>
        <td><%= truncate(strip_tags(centro_salud.direccion), length: 100) %></td>
        <td><a href="<%= centro_salud.sitio_web %>"><%= centro_salud.sitio_web %></a></td>
      </tr>
  <% end %>
  </tbody>
</table>

